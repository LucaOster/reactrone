{
  "name": "reactotron-app",
  "productName": "Reactotron",
  "version": "2.17.1",
  "description": "Reactotron desktop mode engage!",
  "author": {
    "name": "Infinite Red",
    "email": "hello@infinite.red",
    "url": "https://github.com/infinitered/reactotron"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/infinitered/reactotron/issues"
  },
  "repository": "https://github.com/infinitered/reactotron",
  "keywords": [
    "react",
    "react native"
  ],
  "homepage": "https://github.com/infinitered/reactotron#readme",
  "scripts": {
    "postinstall": "patch-package",
    "start": "electron-webpack dev"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "reactotron-core-server": "^3.0.3",
    "reactotron-core-ui": "^1.0.0",
    "styled-components": "^4.4.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "electron": "^7.1.5",
    "electron-webpack": "^2.7.4",
    "patch-package": "^6.2.0",
    "webpack": "^4.41.3"
  },
  "build": {
    "productName": "Reactotron",
    "appId": "com.reactotron.app",
    "files": [
      "src/dist/",
      "src/app.html",
      "src/main.prod.js",
      "src/main.prod.js.map",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "infinitered",
      "repo": "reactotron",
      "private": false
    }
  }
}
